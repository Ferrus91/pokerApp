<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="interactiveHandEvaluator" class="pokerapp.basicgame.InteractiveHandEvaluator" >
        <constructor-arg index="0" ref="console" />
        <constructor-arg index="1" ref="handScorer" />
        <constructor-arg index="2" ref="handFactory" />
    </bean>

    <bean id="handFactory" class="pokerapp.HandFactory" />

    <bean id="stringFormatter" class="pokerapp.utils.textformat.StringFormatter"/>

    <bean id="consoleGame" class="pokerapp.basicgame.ConsoleGame" autowire="constructor">
        <constructor-arg index="0" ref="console"/>
        <constructor-arg index="1" ref="interactivePlayer"/>
        <constructor-arg index="2" ref="computerPlayer"/>
        <constructor-arg index="3" ref="dealer"/>
        <constructor-arg index="4" ref="deck"/>
        <constructor-arg index="5" ref="players"/>
    </bean>

    <bean id="console" class="pokerapp.console.projectX.ProjectXConsole">
        <constructor-arg>
          <bean id="console" class="pokerapp.console.StandardConsole">
            <constructor-arg ref="stringFormatter"/>
          </bean>
        </constructor-arg>
        <constructor-arg ref="stringFormatter" />
    </bean>

    <bean id="interactivePlayer" class="pokerapp.InteractivePlayer"/>

    <bean id="computerPlayer" class="pokerapp.ComputerPlayer">
        <constructor-arg>
            <bean class="pokerapp.skynet.EasyComputerPlayerStrategy" />
        </constructor-arg>
    </bean>
     <!-- SDF Spring needed dealer's constructor argument, not sure why? Possibly because didn't specify Autowire ctor-->
    <bean id="dealer" class="pokerapp.Dealer">
        <constructor-arg>
            <ref bean="deck"/>
        </constructor-arg>
    </bean>

    <bean id="deck" class="pokerapp.Deck" factory-method="createDeck"/>

    <bean id="players" class="pokerapp.Players" autowire="constructor">
        <constructor-arg ref="handScorer"/>
    </bean>

    <!-- define the HandScorer beans in reverse order, so references work... necessary? -->
    <bean id="noPair" class="pokerapp.scorer.scorers.NoPairScorer" scope="prototype"/>
    <bean id="pair" class="pokerapp.scorer.scorers.SameRankHandScorer" scope="prototype">
        <constructor-arg>
            <value>pair</value>
        </constructor-arg>
        <constructor-arg>
            <value>2</value>
        </constructor-arg>
        <constructor-arg>
            <value>1</value>
        </constructor-arg>
    </bean>
    <bean id="twoPair" class="pokerapp.scorer.scorers.TwoPairScorer"  scope="prototype" />
    <bean id="three" class="pokerapp.scorer.scorers.SameRankHandScorer" scope="prototype">
        <constructor-arg>
            <value>three</value>
        </constructor-arg>
        <constructor-arg>
            <value>3</value>
        </constructor-arg>
        <constructor-arg>
            <value>1</value>
        </constructor-arg>
    </bean>
    <bean id="straight" class="pokerapp.scorer.scorers.StraightScorer" scope="prototype"/>
    <bean id="flush" class="pokerapp.scorer.scorers.FlushScorer" scope="prototype"/>
    <bean id="fullHouse" class="pokerapp.scorer.scorers.FullHouseScorer" scope="prototype">
        <constructor-arg>
            <ref bean="three"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="pair"/>
        </constructor-arg>
    </bean>
    <bean id="four" class="pokerapp.scorer.scorers.SameRankHandScorer" scope="prototype">
        <constructor-arg>
            <value>four</value>
        </constructor-arg>
        <constructor-arg>
            <value>4</value>
        </constructor-arg>
        <constructor-arg>
            <value>1</value>
        </constructor-arg>
    </bean>
    <bean id="straightFlush" class="pokerapp.scorer.scorers.StraightFlushScorer" scope="prototype">
        <constructor-arg>
            <ref bean="straight"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="flush"/>
        </constructor-arg>
    </bean>
    <bean id="royalFlush" class="pokerapp.scorer.scorers.RoyalFlushScorer" scope="prototype">
        <constructor-arg>
            <ref bean="straight"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="flush"/>
        </constructor-arg>
    </bean>

    <bean id="handScorer" factory-bean="handScorerFactory" factory-method="getScorer">
    </bean>

    <bean id="handScorerFactory" class="pokerapp.scorer.HandScorerFactory">
        <constructor-arg>
            <list>
                <ref bean="royalFlush"/>
                <ref bean="straightFlush"/>
                <ref bean="four"/>
                <ref bean="fullHouse"/>
                <ref bean="flush"/>
                <ref bean="straight"/>
                <ref bean="three"/>
                <ref bean="twoPair"/>
                <ref bean="pair"/>
                <ref bean="noPair"/>
            </list>
        </constructor-arg>
    </bean>

</beans>