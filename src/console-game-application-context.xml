<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="consoleGame" class="pokerapp.console.ConsoleGame" init-method="initialise" autowire="constructor"/>

    <bean id="console" class="pokerapp.console.StandardConsole"/>

    <bean id="interactivePlayer" class="pokerapp.console.InteractivePlayer"/>

    <bean id="computerPlayer" class="pokerapp.console.EasyComputerPlayer"/>
     <!-- SDF Spring needed dealer's constructor argument, not sure why? Possibly because didn't specify Autowire ctor-->
    <bean id="dealer" class="pokerapp.Dealer">
        <constructor-arg>
            <ref bean="deck"/>
        </constructor-arg>
    </bean>

    <bean id="deck" class="pokerapp.Deck" factory-method="createDeck"/>

    <bean id="players" class="pokerapp.console.Players" autowire="constructor"/>

    <!-- define the HandScorer beans in reverse order, so references work... necessary? -->
    <bean id="noPair" class="pokerapp.scorer.scorers.NoPairScorer"/>
    <bean id="pair" class="pokerapp.scorer.scorers.SameRankHandScorer">
        <constructor-arg>
            <value>pair</value>
        </constructor-arg>
        <constructor-arg>
            <value>2</value>
        </constructor-arg>
        <constructor-arg>
            <value>1</value>
        </constructor-arg>
    </bean>
    <bean id="twoPair" class="pokerapp.scorer.scorers.TwoPairScorer"/>
    <bean id="three" class="pokerapp.scorer.scorers.SameRankHandScorer">
        <constructor-arg>
            <value>three</value>
        </constructor-arg>
        <constructor-arg>
            <value>4</value>
        </constructor-arg>
        <constructor-arg>
            <value>1</value>
        </constructor-arg>
    </bean>
    <bean id="straight" class="pokerapp.scorer.scorers.StraightScorer"/>
    <bean id="flush" class="pokerapp.scorer.scorers.FlushScorer"/>
    <bean id="fullHouse" class="pokerapp.scorer.scorers.FullHouseScorer">
        <constructor-arg>
            <ref bean="three"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="pair"/>
        </constructor-arg>
    </bean>
    <bean id="four" class="pokerapp.scorer.scorers.SameRankHandScorer">
        <constructor-arg>
            <value>four</value>
        </constructor-arg>
        <constructor-arg>
            <value>4</value>
        </constructor-arg>
        <constructor-arg>
            <value>1</value>
        </constructor-arg>
    </bean>
    <bean id="straightFlush" class="pokerapp.scorer.scorers.StraightFlushScorer">
        <constructor-arg>
            <ref bean="straight"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="flush"/>
        </constructor-arg>
    </bean>
    <bean id="royalFlush" class="pokerapp.scorer.scorers.RoyalFlushScorer">
        <constructor-arg>
            <ref bean="straight"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="flush"/>
        </constructor-arg>
    </bean>

    <bean id="handScorer" factory-bean="handScorerFactory" factory-method="getScorer">
    </bean>

    <bean id="handScorerFactory" class="pokerapp.scorer.HandScorerFactory">
        <constructor-arg>
            <list>
                <ref bean="royalFlush"/>
                <ref bean="straightFlush"/>
                <ref bean="four"/>
                <ref bean="fullHouse"/>
                <ref bean="flush"/>
                <ref bean="straight"/>
                <ref bean="three"/>
                <ref bean="twoPair"/>
                <ref bean="pair"/>
                <ref bean="noPair"/>
            </list>
        </constructor-arg>
    </bean>

</beans>