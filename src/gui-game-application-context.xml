<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="filteredHandRunner" class="view.hand.FilteredHandRunner">
        <constructor-arg>
            <ref bean="compositeFilter"/>
        </constructor-arg>
    </bean>


    <bean id="compositeFilter" class="view.imagefilters.CompositeCardFilter">
        <constructor-arg>
            <list>
                <ref bean="invert"/>
                <ref bean="threshold"/>
            </list>
        </constructor-arg>
    </bean>


    <bean id="invert" class="view.imagefilters.InvertCardFilter"/>

    <bean id="threshold" class="view.imagefilters.ThresholdCardFilter"/>

</beans>